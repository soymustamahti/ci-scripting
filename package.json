{
  "name": "nodejs-typescript-template",
  "version": "1.36.0",
  "description": "A template for a nodejs application, using typescript",
  "main": "dist/ci/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node ./ci/app.ts",
    "build": "tsc",
    "start": "node ./dist/app.js",
    "lint": "eslint --ext js,ts,tsx src",
    "format": "prettier --loglevel silent --write ci/**/*.ts",
    "prepare": "husky install",
    "precommit": "pretty-quick --check",
    "prettier:write": "prettier --write \"**/*.{js,ts,css,scss,html}\"",
    "prettier:check": "prettier --check \"**/*.{js,ts,css,scss,html}\""
  },
  "dependencies": {
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "mocha": "^10.1.0",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.2.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@types/node-cron": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "typescript-eslint-parser": "^22.0.0"
  }
}